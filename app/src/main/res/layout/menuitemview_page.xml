<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/destImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="Destination Image" />

    <ImageView
        android:id="@+id/bookmarkBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_white"
        android:padding="16dp"
        android:src="@drawable/bookmark_black"
        app:layout_constraintBottom_toTopOf="@+id/horizontalCardView"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationZ="99dp"
        android:contentDescription="Bookmark Icon" />


    <androidx.cardview.widget.CardView
        android:id="@+id/horizontalCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destImage"
  >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/destName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/destDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" asd ad asd  "
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/destCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" city  "
                android:layout_gravity="bottom"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>