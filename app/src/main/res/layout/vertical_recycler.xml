<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginVertical="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/destImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/userpage_intramuros_img"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/destName"
        android:layout_marginVertical="10dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="destination name"
        android:fontFamily="@font/saxony_serial_bold"
        android:textSize="23sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destDescription"
        android:text="destination description"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/destLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="10dp"
        android:text="city"
        android:fontFamily="@font/saxony_serial_bold"
        />
</LinearLayout>