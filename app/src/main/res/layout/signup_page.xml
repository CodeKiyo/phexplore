<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">

    <ImageView
        android:id="@+id/backgroundSignup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/intro_img1"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="212dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/signup_card"
            android:layout_width="355dp"
            android:layout_height="570dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="104dp"
            android:background="@drawable/signup_signupcontainer"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/signup_icon"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    app:srcCompat="@drawable/signup_userlogo"
                    tools:layout_editor_absoluteX="290dp"
                    tools:layout_editor_absoluteY="27dp" />

                <TextView
                    android:id="@+id/signupText"
                    android:layout_width="122dp"
                    android:layout_height="38dp"
                    android:fontFamily="@font/saxony_serial_bold"
                    android:text="Sign Up"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="27dp"
                    tools:layout_editor_absoluteY="27dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_username_card"
                    android:layout_width="272dp"
                    android:layout_height="47dp"
                    android:background="@drawable/signup_credential"
                    android:backgroundTint="#FAFAFA"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="3dp"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="105dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/signup_credential"
                        android:backgroundTint="#F4F4F4"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/signup_username_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="22dp"
                            android:layout_marginBottom="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/signup_username"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/signup_usernamelogo" />

                        <EditText
                            android:id="@+id/signup_username"
                            android:layout_width="184dp"
                            android:layout_height="47dp"
                            android:layout_marginEnd="30dp"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="@font/jetbrainsmono_medium"
                            android:hint="Username"
                            android:inputType="text"
                            android:maxLength="12"
                            android:nestedScrollingEnabled="true"
                            android:singleLine="false"
                            android:textAlignment="viewStart"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/signup_username_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_email_card"
                    android:layout_width="272dp"
                    android:layout_height="47dp"
                    android:background="@drawable/signup_credential"
                    android:backgroundTint="#EFEFEF"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="3dp"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="165dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/signup_credential"
                        android:backgroundTint="#F4F4F4"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/signup_email_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="22dp"
                            android:layout_marginBottom="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/signup_username"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/signup_emaillogo" />

                        <EditText
                            android:id="@+id/signup_email"
                            android:layout_width="184dp"
                            android:layout_height="47dp"
                            android:layout_marginEnd="30dp"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="@font/jetbrainsmono_medium"
                            android:hint="Email"
                            android:inputType="text"
                            android:maxLength="12"
                            android:nestedScrollingEnabled="true"
                            android:singleLine="false"
                            android:textAlignment="viewStart"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/signup_username_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_birthday_card"
                    android:layout_width="272dp"
                    android:layout_height="47dp"
                    android:background="@drawable/signup_credential"
                    android:backgroundTint="#F4F4F4"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="3dp"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="225dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/signup_credential"
                        android:backgroundTint="#EFEFEF"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/signup_username_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="22dp"
                            android:layout_marginBottom="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/signup_username"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/signup_usernamelogo" />

                        <EditText
                            android:id="@+id/signup_username"
                            android:layout_width="184dp"
                            android:layout_height="47dp"
                            android:layout_marginEnd="30dp"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="@font/jetbrainsmono_medium"
                            android:hint="Username"
                            android:inputType="text"
                            android:maxLength="12"
                            android:nestedScrollingEnabled="true"
                            android:singleLine="false"
                            android:textAlignment="viewStart"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/signup_username_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/signup_password_card"
                    android:layout_width="272dp"
                    android:layout_height="47dp"
                    android:background="@drawable/signup_credential"
                    android:backgroundTint="#F4F4F4"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="3dp"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="286dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/signup_credential"
                        android:backgroundTint="#EFEFEF"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/signup_username_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="22dp"
                            android:layout_marginBottom="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/signup_username"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/signup_usernamelogo" />

                        <EditText
                            android:id="@+id/signup_username"
                            android:layout_width="184dp"
                            android:layout_height="47dp"
                            android:layout_marginEnd="30dp"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="@font/jetbrainsmono_medium"
                            android:hint="Username"
                            android:inputType="text"
                            android:maxLength="12"
                            android:nestedScrollingEnabled="true"
                            android:singleLine="false"
                            android:textAlignment="viewStart"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/signup_username_icon"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
