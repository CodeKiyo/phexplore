<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="100dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundIntro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/intro_img1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-48dp">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="275dp"
            android:layout_height="94dp"
            android:layout_marginStart="68dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="26dp"
            android:fontFamily="@font/protestrevolution_regular"
            android:text="@string/phexplore"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/slogan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quote" />

        <TextView
            android:id="@+id/quote"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="29dp"
            android:fontFamily="@font/protestrevolution_regular"
            android:text="Everyone has the right to freedom of thought, conscience, and explore"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="172dp"
            android:layout_height="48dp"
            android:layout_marginStart="119dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="101dp"
            android:fontFamily="@font/dale_adventure"
            android:lineSpacingExtra="5sp"
            android:text="@string/slogan"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/intro_getstarted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name" />

        <Button
            android:id="@+id/intro_getstarted"
            android:layout_width="308dp"
            android:layout_height="48dp"
            android:layout_marginStart="116dp"
            android:layout_marginEnd="117dp"
            android:layout_marginBottom="120dp"
            android:backgroundTint="#00FFFFFF"
            android:clickable="true"
            android:elevation="8dp"
            android:fontFamily="@font/saxony_serial_bold"
            android:text="@string/get_started"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>